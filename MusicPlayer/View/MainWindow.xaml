<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModel="clr-namespace:MusicPlayer.ViewModel"
        d:DataContext="{d:DesignInstance d:Type=viewModel:MusicPlayerViewModel}"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="Border"
                                BorderThickness="0"
                                Background="LightBlue">
                                <ContentPresenter
                                    Margin="2"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Content="{TemplateBinding Content}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="CornflowerBlue"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>

        <Style TargetType="{x:Type ToggleButton}">
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border
                                x:Name="Border"
                                BorderThickness="0"
                                Background="LightBlue">
                                <ContentPresenter
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Content="{TemplateBinding Content}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="CornflowerBlue"/>
                                </Trigger>

                                <Trigger Property="IsChecked" Value="False">
                                    <Setter TargetName="Border" Property="Background" Value="LightBlue"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style.Setters>
        </Style>



    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            Orientation="Horizontal"
            Margin="5">
            
            <Button
                x:Name="OpenButton"
                Width="150"
                Height="20"
                Content="Open Music Directory"
                Command="{Binding OpenDirectoryCommand}"
                Margin="0,0,10,0"/>
            
            <Button
                Width="150"
                Height="20"
                x:Name="OpenFileButton"
                Content="Open Music File"
                Command="{Binding OpenFileCommand}"/>
        </StackPanel>
        
        <ListView
            Grid.Column="0"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            SelectionMode="Single"
            MouseDoubleClick="Control_OnMouseDoubleClick"
            SelectedItem="{Binding CurrentSong, Mode=OneWay}"
            ItemsSource="{Binding TrackCollection}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title" Width="120" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Artist" Width="130" DisplayMemberBinding="{Binding Artist}"/>
                    <GridViewColumn Header="Album" Width="130" DisplayMemberBinding="{Binding Album}"/>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                            <Setter  Property="Foreground" Value="DarkBlue"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding IsPlaying}" Value="False">
                            <Setter  Property="Foreground" Value="Black"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        
        <StackPanel
            x:Name="ProgressPanel"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="2"
            Orientation="Vertical">
            
            <Slider
                x:Name="ProgressSlider"
                Thumb.DragStarted="ProgressSlider_OnDragStarted"
                Thumb.DragCompleted="ProgressSlider_OnDragCompleted"
                ValueChanged="ProgressSlider_OnValueChanged"
                Margin="5"
                Minimum="0"
                Value="{Binding ProgressValue}"
                Maximum="{Binding TotalDuration}"/>
            <DockPanel
                Width="{Binding ElementName=ProgressPanel, Path=ActualWidth}">
                
                <TextBlock
                    DockPanel.Dock="Left"
                    Margin="5,0,0,0"
                    Text="{Binding ProgressTextValue}"/>
                
                <TextBlock
                    DockPanel.Dock="Right"
                    HorizontalAlignment="Right"
                    Margin="0,0,5,0"
                    Text="{Binding TotalDurationTextValue}"/>
                
            </DockPanel>
            
        </StackPanel>

        <StackPanel
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="3"
            Orientation="Horizontal"
            Margin="5">

            <Button
                x:Name="SkipBackButton"
                Height="20"
                Width="70"
                Command="{Binding SkipBackwardCommand}"
                Margin="0,0,10,0">
                <Image
                    Source="../Icons/skipBack.png"
                    Stretch="Uniform"></Image>
            </Button>

            <Button
                x:Name="PlayButton"
                 Height="20"
                Width="70"
                Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Setters>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="Border"
                                            BorderThickness="0"
                                            Background="LightBlue">
                                            <ContentPresenter
                                                Margin="2"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Content="{TemplateBinding Content}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="CornflowerBlue"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <Image
                                                            Source="../Icons/pause.png"
                                                            Stretch="Uniform"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Command" Value="{Binding PauseCommand}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsPlaying}" Value="False">
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <Image
                                                            Source="../Icons/Play.png"
                                                            Stretch="Uniform"/>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Command" Value="{Binding PlayCommand}"/>
                                            </DataTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style.Setters>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button
                x:Name="SkipForwardButton"
                Height="20"
                Width="70"
                Command="{Binding SkipForwardCommand}">
                <Image
                    Source="../Icons/skipForward.png"
                    Stretch="Uniform"/>
            </Button>
            
            <ContentPresenter
                Height="20"
                Width="20"
                Margin="15,0,0,0">
                <ContentPresenter.Content>
                    <Image
                        Source="../Icons/volume.png"
                    ></Image>
                </ContentPresenter.Content>
               
            </ContentPresenter>
            
            <Slider
               Margin="5,0,5,0"
               Width="90"
               Minimum="0"
               Maximum="1"
               Value="{Binding Volume}"
               />
            
            <TextBlock
                Width="50"
                Text="{Binding VolumeTextValue}"/>
            
            <ToggleButton
                HorizontalAlignment="Right"
                Margin="15,0,0,0"
                Height="20"
                Width="30"
                IsChecked="{Binding ShuffleSongs}">
                <Image
                    Source="../Icons/shuffle.png"
                    Stretch="Uniform"></Image>
            </ToggleButton>
            <ToggleButton
                Margin="5,0,0,0"
                Height="20"
                Width="30"
                IsChecked="{Binding ContinuousPlay}">
                <Image
                    Source="../Icons/continuous.png"></Image>
            </ToggleButton>
        </StackPanel>
    </Grid>
</Window>
